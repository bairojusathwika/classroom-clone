<!DOCTYPE html>
<html>
  
<head>
  <meta charset="utf-8">
  <title>Classroom</title>
  <link rel="stylesheet" href="css/main_page_style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/3d39a548bb.js" crossorigin="anonymous"></script>
</head>

<body>
  <!-- Describing Navigation Bar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary" style="margin-bottom: 50px;">
    <div class="container-fluid">
      <a class="navbar-brand   fs-1 text-success" href="#">Classroom <i class="fa-solid fa-chalkboard-user"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>

      </button>

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto ">

          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="modal" data-bs-target="#create-class-Modal"
              data-bs-whatever="@mdo">Create Class</a>
          </li>
              <!--Create Class Modal-->
          <div class="modal fade" id="create-class-Modal" tabindex="-1" aria-labelledby="create-class-ModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="create-class-ModalLabel">Create Class</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form id="create-class-form" action="/createclass" method="POST">
                    <div class="mb-3 form-group">
                      <input type="text" class=" input-field form-control" id="class-name" name="class_name" required
                        placeholder="Class name (Required)">
                    </div>
                    <div class="mb-3">
                      <input type="text" class=" input-field form-control" id="section" rows="3" name="sectionstu"
                        placeholder="Section">
                    </div>
                    <div class="mb-3">
                      <input type="text" class=" input-field form-control" id="class-description" rows="3"
                        name="description" placeholder="Class-description">
                    </div>
                    <div class="mb-3">
                      <input type="text" class=" input-field form-control" id="class-subject" name="subject"
                        placeholder="Subject">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary" type="submit">Create class</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>


         <!--Join Class Modal-->
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="modal" data-bs-target="#join-class-Modal" data-bs-whatever="@mdo">Join Class</a>
          </li>
          <div class="modal fade" id="join-class-Modal" tabindex="-1" aria-labelledby="join-class-ModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="join-class-ModalLabel">Join Class</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="mb-3">
                      <label for="class-code" class="col-form-label ">Enter class Code:</label>
                      <input type="text" class="form-control" id="class-name" placeholder="Class code (Required)">
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-primary">Join Class</button>
                </div>
              </div>
            </div>
          </div>


          <!--Button For Calendar-->
          <li class="nav-item">
            <a class="nav-link" href="">Calendar</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/teaprofile"><i class="fa-solid fa-user"></i> Profile</a></a></li>
              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-table-cells-large"></i> Grades</a></li>
              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-wrench"></i> Setting</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!--Creating Container box for Professor which class they are teaching-->
  <div class="container text-center" style="margin-bottom: 50px;">
    <div class="row row-cols-2 row-cols-md-5 g-2 g-md-3 ">
      <% for (let i=0; i < x; i++) { %>
        <div class="col">
          <a  href="/to_do" style="text-decoration: none; color:rgb(17, 17, 18);" > 
          <div class="p-3 fs-6 ">
            <%= user[i].classname %> ( <%= user[i].section %> )
              <hr class="divider">
              <hr class="divider1">
              <b>Class code:</b> <%= user[i].classcode %>
          </div>
        </a>
        </div>
        <% } %>
    </div>
  </div>
</body>